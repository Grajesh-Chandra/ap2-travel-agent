# Voyager AI - AP2 Travel Agent Demo
# Copy this file to .env and customize as needed

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen3:8b
OLLAMA_TIMEOUT=30

# Server Ports
SHOPPING_AGENT_PORT=8000
MERCHANT_AGENT_PORT=8001
CREDENTIALS_AGENT_PORT=8002
PAYMENT_AGENT_PORT=8003

# Frontend
FRONTEND_PORT=5173
VITE_API_BASE_URL=http://localhost:8000

# Logging
LOG_LEVEL=DEBUG
LOG_DIR=./logs

# AP2 Configuration
AP2_VERSION=v1
AP2_MANDATE_TTL_MINUTES=30

# Demo Mode (disables real payment processing)
DEMO_MODE=true

# Use LLM for package generation (slow, can take 2+ minutes)
# Set to false for fast mock packages (recommended for testing)
USE_LLM_FOR_PACKAGES=false

# Wallet Configuration (for AP2 payment signing)
# WARNING: Use environment variables or secrets manager in production
WALLET_ADDRESS=0x1467DcbB9208aEe398F41D0F1d768434a5d2dbA5
WALLET_PRIVATE_KEY=your_private_key_here

# Crypto (for demo purposes only - not for production)
AP2_SIGNING_SECRET=voyager-ap2-demo-secret-2025
